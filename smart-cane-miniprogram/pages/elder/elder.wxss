.status-indicator {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  font-weight: bold;
  border-radius: 20rpx;
  color: white;
  transition: all 0.3s;
}
.normal {
  background-color: #4CAF50;
}
.fall {
  background-color: #f44336;
  animation: blink 1s infinite;
}
@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.6; }
  100% { opacity: 1; }
}
.log-area {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
  width: 100%;
  word-break: break-all;
  background: #eee;
  padding: 10rpx;
  border-radius: 10rpx;
}

.weather-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #E3F2FD;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.weather-info {
  display: flex;
  flex-direction: column;
}

.btn-small {
  background-color: #2196F3;
  color: white;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 0;
}

.news-box {
  background: #FFF3E0;
  padding: 20rpx;
  border-radius: 15rpx;
}

.section-title {
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #E65100;
}

.audio-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-control {
  background-color: #FF9800;
  color: white;
  width: 200rpx;
  border-radius: 40rpx;
}