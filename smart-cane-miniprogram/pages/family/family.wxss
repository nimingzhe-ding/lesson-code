.status-box {
  padding: 60rpx 40rpx;
  border-radius: 15rpx;
  color: white;
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  transition: all 0.3s;
}
.normal-bg {
  background-color: #4CAF50;
}
.fall-bg {
  background-color: #f44336;
  animation: blink 1s infinite;
}
@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.6; }
  100% { opacity: 1; }
}
.status-label {
  font-size: 32rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}
.status-value {
  font-size: 70rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
.time-label {
  font-size: 26rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

/* AI 模块样式 */
.ai-box {
  background-color: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  min-height: 150rpx;
  margin-bottom: 20rpx;
  border: 1px solid #e0e0e0;
}

.ai-placeholder {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  line-height: 150rpx;
}

.ai-result {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.btn-ai {
  background: linear-gradient(90deg, #2196F3, #21CBF3);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  width: 100%;
  text-align: center;
  box-shadow: 0 6rpx 10rpx rgba(33, 150, 243, 0.3);
}

.btn-ai:active {
  opacity: 0.9;
}